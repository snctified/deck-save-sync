{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Remote Sync configuration",
    "description": "A configuration file for Remote Sync",
    "type": "object",
    "properties": {
        "auto_sync": {
            "description": "Sync files automatically on start",
            "type": "boolean"
        },
        "remote": {
            "description": "Remote hostname",
            "type": "string"
        },
        "user": {
            "description": "Username for the remote",
            "type": "string"
        },
        "locations": {
            "description": "Locations whose files should be synced",
            "type": "array",
            "uniqueItems": true,
            "minItems": 1,
            "items": {
                "type":"object",
                "properties": {
                    "name": {
                        "description": "Name of the location",
                        "type": "string"
                    },
                    "local_path": {
                        "description": "Local path to the files",
                        "type": "string"
                    },
                    "remote_path": {
                        "description": "Remote path to the files",
                        "type": "string"
                    },
                    "files": {
                        "description": "List of files to sync, all files are synced if empty",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": ["name", "local_path", "remote_path", "files"]
            }
        }
    },
    "required": ["auto_sync", "remote", "locations"]
}
